{% extends 'base.html.twig' %}

{% block body_content %}
    <h1>Feedback</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ feedback.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ feedback.titre }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ feedback.contenu }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if feedback.date %}{{ feedback.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('feedback_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('feedback_edit', { 'id': feedback.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
