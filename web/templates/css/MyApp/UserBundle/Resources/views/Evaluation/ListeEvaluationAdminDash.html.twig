
{% extends '@MyAppUser/layoutAdmin.html.twig' %}

{% block body %}
    <table class="table table-striped table-bordered" id="t01">

        <caption align="center">
            <center><h1>USERS</h1></center>
        </caption>

        <thead>
        <tr>

            <th >Passager</th>
            <th >Note</th>
            <th>Date Evaluation</th>
            <th>Conducteur</th>
            <th>Description</th>

        </tr>
        </thead>
        {% for evaluation in evaluations %}
            <tbody>


            <tr>
                <td >{{ evaluation.user.nom }}</td>
                <td>{{ evaluation.note }}</td>

                <td>{{ evaluation.dateEvaluation|date('Y-m-d') }}</td>
                <td>{{ evaluation.trajet.user.nom }}</td>
                <td>{{ evaluation.commentaire }}</td>
                <td align="center"><a href="{{ path('Supprimer2Evaluation',{'id':evaluation.id}) }}"
                                      onclick="return confirm('Voulez vous vraiment supprimer cet élément?')">
                        <img src="{{ asset ('templates/img/delete.png') }}" width="20px"
                             height="20px"></a>
                    {{  evaluation.id}}</td>
            </tr>


            </tbody>
        {% endfor %}
    </table>
{% endblock %}