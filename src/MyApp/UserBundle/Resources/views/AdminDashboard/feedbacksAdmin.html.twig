{% extends '@MyAppUser/layoutAdmin.html.twig' %}
{% block body %}
    <div class="row">
        <div class="col-md-12">
            <!-- start: DYNAMIC TABLE PANEL -->
            <div class="panel panel-white">
                <div class="panel-heading">
                    <!-- <h4 class="panel-title">Liste des <span class="text-bold">articles</span></h4>-->
                    <caption align="center">
                        <center><h1>FEEDBACKS</h1></center>
                    </caption>
                    <div class="panel-tools">
                        <div class="dropdown">
                            <a data-toggle="dropdown" class="btn btn-xs dropdown-toggle btn-transparent-grey">
                                <i class="fa fa-cog"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-light pull-right" role="menu">
                                <li>
                                    <a class="panel-collapse collapses" href="#"><i class="fa fa-angle-up"></i>
                                        <span>Collapse</span> </a>
                                </li>
                                <li>
                                    <a class="panel-refresh" href="#">
                                        <i class="fa fa-refresh"></i> <span>Refresh</span>
                                    </a>
                                </li>
                                <li>
                                    <a class="panel-config" href="#" data-toggle="modal">
                                        <i class="fa fa-wrench"></i> <span>Configurations</span>
                                    </a>
                                </li>
                                <li>
                                    <a class="panel-expand" href="#">
                                        <i class="fa fa-expand"></i> <span>Fullscreen</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
              <div class="panel-body">
                    <table class="table table-striped table-bordered table-hover table-full-width" id="sample_1">
                        <thead>
                        <tr>
                            <th>Satisfaction</th>
                            <th class="hidden-xs">Reclamation</th>
                            <th>Receive Date</th>
                            <th>Par</th>
                        </tr>
                        </thead>
                        {% for feed in feedbacks %} }
                            <tbody>

                            <tr>
                                <td>{{ feed.titre }}</td>
                                <td>{{ feed.contenu }}</td>
                                <td>{{ feed.date|date('Y-m-d') }}</td>
                                <td>{{ feed.user.nom }} {{ feed.user.prenom }}</td>
                                <td>
                                    <div class="visible-md visible-lg hidden-sm hidden-xs">
                                        <a href="{{path('feedback_deleteAdmin',{'id':feed.id})  }} " class="btn btn-xs btn-red tooltips" data-placement="top"
                                           data-original-title="Supprimer"><i class="fa fa-times fa fa-white"></i></a>
                                    </div>
                                </td>
                            </tr>
                            </tbody>
                        {% endfor %}

                    </table>
              </div>
            </div>
            <!-- end: DYNAMIC TABLE PANEL -->
        </div>
    </div>


{% endblock %}