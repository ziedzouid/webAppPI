{% extends 'base.html.twig' %}
{% block body_content %}
    {% block head %}
        {% block stylesheet %}
            {{ parent() }}
            <style>
                table {
                    border-collapse: collapse;
                    width: 100%;
                }

                th {
                    text-align: center;
                    padding: 8px;
                    size: 40px;
                    padding: 8px;
                    color: #0f0f0f;
                    border-bottom: 1px solid #ddd;
                    border: solid
                }

                td {
                    padding: 8px;
                    text-align: left;
                    border-bottom: 1px solid #ddd;
                    color: #0f0f0f;
                    border: solid
                }

                IMG {
                    display: block;
                    margin: auto;
                }

                tr:hover {
                    background-color: #f5f5f5;
                }

                h2 {
                    size: 300px;
                    color: #ac2925
                }
            </style>
        {% endblock %}
    {% endblock %}

    <div class="search-widget sidebar-widget">

        <h4 class="widget-title" style="text-align: center; size: 30px">Search</h4>

        <div class="top-register container"
             style="border: solid;border-color: ghostwhite; background-color: antiquewhite">
            <form class="idealforms search-form adaptive" autocomplete="off" method="Post" novalidate=""
                  action="{{ path('conducteur_event_recherche_home') }}">
                <div class="field idealforms-field idealforms-field-email">
                    <input type="text" placeholder="Type" name="type">
                </div>
                <div class="field buttons">
                    <button class="btn btn-lg blue-color" type="submit" name="search">Search</button>
                </div>
            </form>
        </div><!-- end .widget-content -->

    </div><!-- end .archives-widget -->


    <!-- end .search-content -->
    <form>
        {% for Evenement in Evenement %}
        <div class="single-list-course row no-gutter">
            <div class="single-list-course row no-gutter container" style="margin: auto;">
                <div class="col-xs-12 col-sm-4">
                    <img src="{{ asset('templates/img/events/1.jpg') }}" alt="">
                </div>
                <div class="col-xs-12 col-sm-8">
                    <div class="list-course-content">
                        <h3>{{ Evenement.type }}</h3>
                        <p>{{ Evenement.contenu }}</p>

                    </div>
                    <div class="single-bottom icon">
                        <i class="fa fa-star" style="color: gold"></i>
                        <i class="fa fa-star" style="color: gold"></i>
                        <i class="fa fa-star" style="color: gold"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                    </div>
                </div>

                <div class="course-bottom-list flex space-between form-group">

                    <div class="single-bottom dollar">


                    </div>
                    <div class="single-bottom dollar">

                    </div>
                    <div class="row">

                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </form>



{% endblock %}
